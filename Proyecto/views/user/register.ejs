<!DOCTYPE html>
<html lang="en">
<head>
    <title>Registro</title>
    <link rel="stylesheet" href="/CSS/register.css">
    <%- include('../partials/head') %>
</head>
<body>
    <header>
        <%- include ('../partials/header') %>
    </header>
    <main >
        <div>
            <h1>Registrarse</h1>
            <form class="formulario" action="/user/register" method="POST" enctype="multipart/form-data">

                <div class="input-container">
                    <label for="name">Ingrese su nombre</label>
                    <input type="text" name="name" id="name" class="<%= (locals.errors && errors.name) ? 'input-error' : '' %>" value="<%= locals.userToEdit && userToEdit.name%>"/>
                    <span class='msg-error msg-error-name'></span>
                    <% if (locals.errors && errors.name) { %>
                        <p class='msg-error'><%= errors.name.msg %></p>
                    <% } %>
                </div>


                <div class="input-container">
                    <label for="last_name">Ingrese su apellido</label>
                    <input type="text" name="last_name" id="last_name" class="<%= (locals.errors && errors.last_name) ? 'input-error' : '' %>" value="<%= locals.userToEdit && userToEdit.last_name%>" />
                    <span class='msg-error msg-error-last_name'></span>

                    <% if (locals.errors && errors.last_name) { %>
                        <p class='msg-error'><%= errors.last_name.msg %></p>
                    <% } %>
                </div>

                <div class="input-container">
                    <label for="email">Ingrese su email</label>
                    <input type="text" name="email" id="email" class="<%= (locals.errors && errors.email) ? 'input-error' : '' %>" value="<%= locals.userToEdit && userToEdit.email%>"/>
                     <span class='msg-error msg-error-email'></span>

                    <% if (locals.errors && errors.email) { %>
                        <p class='msg-error'><%= errors.email.msg %></p>
                    <% } %>

                </div>

                <div class="input-container">
                    <label for="password">Contraseña</label>
                    <input type="password" name="password" id="password" class="<%= (locals.errors && errors.password) ? 'input-error' : '' %>" value="<%= locals.userToEdit && userToEdit.password%>"/>
                    <span class='msg-error msg-error-password'></span>

                    <% if (locals.errors && errors.password) { %>
                        <p class='msg-error'><%= errors.password.msg %></p>
                    <% } %>

                </div>

                <div class="input-container">
                    <label for="cell">Ingrese su número de celular</label>
                    <input type="text" name="cell" id="cell" class="<%= (locals.errors && errors.cell) ? 'input-error' : '' %>" value="<%= locals.userToEdit && userToEdit.cell%>"/>
                    <span class='msg-error msg-error-cell'></span>
                    <% if (locals.errors && errors.cell) { %>
                        <p class='msg-error'><%= errors.cell.msg %></p>
                    <% } %>

                </div>


                <div class="input-container">
                    <label for="image">Imágen</label>
                    <input type="file"  name="image" id="image" />
                    <span class='msg-error msg-error-image'></span>
                    <% if (locals.errors && errors.image) { %>
                        <p class='msg-error'><%= errors.image.msg %></p>
                    <% } %>

                </div>


                <div class="input-container">
                    <button type="summit" value="Registrarse">ENVIAR</button>
                </div>

            </form>
        </div>
    </main>
    <footer class="main-footer">
        <%- include("../partials/footer") %>
    </footer>
</body>
</html>
<script src="/JS/FormValidationNewUser.js"></script>