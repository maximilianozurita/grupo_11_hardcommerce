<body>

  <div class="container">

    <header class="container-fluid">
      <%- include ('../partials/header') %>
    </header>
  
    <main class="container border-bottom border-top">
          
      <div class="row my-6 align-items-center justify-content-center bg-light">
          
          <div class="col-6 align-items-center justify-content-center">
            
            <h1 class="mb-4">Ingresar:</h1>
            
            <form class="formulario " action="/user/login" method="POST">

              <div class="mb-3">
                
                <label for="email" class="form-label">Correo Electronico</label>
                <input type="text" id="email" class="form-control w-50" aria-describedby="ayuda-correo"/>

              </div>

              <!-- <span class='msg-error msg-error-email'></span>
              <span class='msg-error msg-error-email'></span> -->
              <!-- <% if (locals.errors && errors.email) { %>
                <p class='msg-error'><%= errors.email.msg %></p>
              <% } %> -->

              <div class="mb-3">
                
                <label for="password"></label>
                <input type="password" placeholder="Contrase単a" name="password" id="password"  
                  class="<%= (locals.errors && errors.name) ? 'input-error' : '' %> form-control w-50" />

                <!-- <span class='msg-error msg-error-password'></span>
                <% if (locals.errors && errors.password) { %>
                  <p class='msg-error'><%= errors.password.msg %></p>
                <% } %> -->
              </div>
