<!DOCTYPE html>
<html lang="en">
<head>
    <title>editUsers</title>
    <link rel="stylesheet" href="/CSS/editUsers.css">
    <%- include('../partials/head') %>
</head>
<body>
    
    <%- include('../partials/header') %>
   <main >
       
        <section class="formulario">
            
            <form action="/user/<%= userToEdit.id %>?_method=PUT" method="POST" enctype="multipart/form-data">

                <div class="input-container">
                    <label for="name">Ingrese su nombre</label>
                    <input type="text" name="name" id="name" class="<%= (locals.errors && errors.name) ? 'input-error' : '' %>" value="<%= locals.oldValues && oldValues.name%>"/>
                
                    <% if (locals.errors && errors.name) { %>
                        <p class='msg-error'><%= errors.name.msg %></p>
                    <% } %>
                
                </div>

                <div class="input-container">
                    <label for="lastName">Ingrese apellido</label>
                    <input type="text" name="lastName" id="lastName" class="<%= (locals.errors && errors.lastName) ? 'input-error' : '' %>" value="<%= locals.oldValues && oldValues.lastName%>" /> />
                    
                    <% if (locals.errors && errors.lastName) { %>
                        <p class='msg-error'><%= errors.lastName.msg %></p>
                    <% } %>
                
                </div>

                <div class="input-container">
                    <label for="email">Ingrese email</label>
                    <input type="text" name="email" id="email" class="<%= (locals.errors && errors.email) ? 'input-error' : '' %>" value="<%= locals.oldValues && oldValues.email%>"/> />
                
                    <% if (locals.errors && errors.email) { %>
                        <p class='msg-error'><%= errors.email.msg %></p>
                    <% } %>
                
                </div>
                
                <div class="input-container">
                    <label for="password">Contraseña</label>
                    <input type="text" name="password" id="password"  class="<%= (locals.errors && errors.password) ? 'input-error' : '' %>" value="<%= locals.oldValues && oldValues.password%>"/>/>
                
                    <% if (locals.errors && errors.password) { %>
                        <p class='msg-error'><%= errors.password.msg %></p>
                    <% } %>
                
                </div>

                <div class="input-container">
                    <label for="cell">Ingrese número de celular</label>
                    <input type="text" name="cell" id="cell" class="<%= (locals.errors && errors.cell) ? 'input-error' : '' %>" value="<%= locals.oldValues && oldValues.cell%>"/>/>
                
                    <% if (locals.errors && errors.cell) { %>
                        <p class='msg-error'><%= errors.cell.msg %></p>
                    <% } %>
                
                </div>

                <div class="input-container">
                    <label for="imagen">Imágen</label>
                    <input type="file"  name="imagen" id="imagen" />
                </div>

                <div class="input-container">
                    <button type="submit"><p>ENVIAR</p></button>
                
                    <% if (locals.errors && errors.imagen) { %>
                        <p class='msg-error'><%= errors.imagen.msg %></p>
                    <% } %>
                
                </div>

            </form>
        </section>

   </main>
   <footer class="main-footer">
    <%- include("../partials/footer") %>
</footer>
</body>
</html> 