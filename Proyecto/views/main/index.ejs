    <main class="container">
        
        <section class="row mt-3">
            <div class="col">
                <div class="carousel slide carousel-fade" id="mi-carousel" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active d-block w-100">
                            <img class="img-fluid" src="/images/carousel1.jpg" alt="">
                        </div>
                        <div class="carousel-item d-block w-100" data-bs-interval="5000">
                            <img class="img-fluid" src="/images/carousel2.jpg" alt="" >
                        </div>
                        <div class="carousel-item d-block w-100">
                            <img class="img-fluid" src="/images/carousel3.jpg" alt="">
                        </div>
                        <div class="carousel-item d-block w-100">
                            <img class="img-fluid" src="/images/carousel2.jpg" alt="">
                        </div>
                    </div>

                    <!-- Controles -->
                    <button 
                        class="carousel-control-prev"
                        type="button"
                        data-bs-target="#mi-carousel"
                        data-bs-slide="prev"
                    >
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Anterior</span>
                    </button>

                    <button 
                        class="carousel-control-next"
                        type="button"
                        data-bs-target="#mi-carousel"
                        data-bs-slide="next"
                    >
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Siguiente</span>
                    </button>

                    <!-- Indicadores -->
                    <div class="carousel-indicators">
                        <button 
                            type="button"
                            class="active"
                            data-bs-target="#mi-carousel"
                            data-bs-slide-to="0"
                            aria-label="Slide 1"
                        ></button>
                        <button 
                            type="button"
                            class=""
                            data-bs-target="#mi-carousel"
                            data-bs-slide-to="1"
                            aria-label="Slide 2"
                        ></button>
                        <button 
                            type="button"
                            class=""
                            data-bs-target="#mi-carousel"
                            data-bs-slide-to="2"
                            aria-label="Slide 3"
                        ></button>
                        <button 
                            type="button"
                            class=""
                            data-bs-target="#mi-carousel"
                            data-bs-slide-to="3"
                            aria-label="Slide 4"
                        ></button>
                    </div>
                </div>
            </div>
        </section>
    
        
        <h2>Ofertas</h2>
        <section class="row mt-3">

            <div class="col-4">

                  
                <% 
                    let long;
                    if(productList.length<10){
                        long = productList.length
                    }
                    else{
                        long = 10;
                    }

                    for(let i=0; i<long ; i++){ %>
                        
                        <div class="card">
                            
                            <a href="/products/detail/<%= productList[i].id %>">
                                <img src="<%= productList[i].images[0].url %>" alt="imagen-oferta" class="card-img-top">
                            </a>
