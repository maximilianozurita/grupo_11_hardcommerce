<!DOCTYPE html>
<html lang="en">
<head>
    <title>login</title>
    <link rel="stylesheet" href="/CSS/login.css">
    <%- include('../partials/head') %>
</head>
<body>
    <header>
        <%- include ('../partials/header') %>
    </header>
    <main>
        <div>
            <h1>Ingresar</h1>
            <form class="formulario" action="" method="POST">             
              <div class=input-container>
                <label for="email"></label>
                <input placeholder="email" name="email" class="<%= (locals.errors && errors.email) ? 'input-error' : '' %>" value="<%= locals.oldValues && oldValues.email%>"/> 

                <% if (locals.errors && errors.email) { %>
                  <p class='msg-error'><%= errors.email.msg %></p>
                <% } %>

             </div>
              <div class="input-container">
                <label for="password"></label>
                <input placeholder="Contrase単a" name="password" class="<%= (locals.errors && errors.password) ? 'input-error' : '' %>" value="<%= locals.oldValues && oldValues.password%>"/>

                <% if (locals.errors && errors.password) { %>
                  <p class='msg-error'><%= errors.password.msg %></p>
                <% } %>

              </div>
              <div class="input-container">
                <input class="boton" type="submit" value="Ingresar">
                <div class="recuperar">
                    <a href="#">多Olvido su contrase単a?</a>
                    <a href="#">多Nuevo usuario?</a>
                </div>
              </div>
            </form>

        </div>
    </main>
    <footer class="main-footer">
        <%- include("../partials/footer") %>
    </footer>
</body>
</html>